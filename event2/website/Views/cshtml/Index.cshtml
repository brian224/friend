@{
    Layout       = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Full = true;
    ViewBag.Curr = "index";
}
@section header{ 
    <link rel="stylesheet" href="@Url.Content("~/Content/css/index.css")?CSS=20170913_07">
}
    <div class="l-main jQ-main is-full">
        <main class="l-content jQ-content">
            <div class="index b-bg-black" data-index="">
                <header class="index-hd b-text-center">
                    <h2 class="page-title">
                        <em class="b-hide-text">毛孩告急！救援浪浪 不再忽視</em>
                        <svg class="svg-icon sos-gradient">
                            <linearGradient id="gradient2" gradientUnits="userSpaceOnUse" x1="50.1167" y1="82.1667" x2="50.1167" y2="18.3279">
                                <stop offset="0" style="stop-color:#FFAE00"/>
                                <stop offset="1" style="stop-color:#FFC600"/>
                            </linearGradient>
                            <use xlink:href="@Url.Content("~/Content/svg/icon.svg")?svg=20170907#sos-gradient"/>
                        </svg>
                        <svg class="svg-icon title-main-gradient">
                            <linearGradient id="gradient" gradientUnits="userSpaceOnUse" x1="50" y1="62.8125" x2="50" y2="38.0511">
                                <stop offset="0" style="stop-color:#FFAE00"/>
                                <stop offset="1" style="stop-color:#FFC600"/>
                            </linearGradient>
                            <use xlink:href="@Url.Content("~/Content/svg/icon.svg")?svg=20170907#title-main-gradient"/>
                        </svg>
                        <svg class="svg-icon title-sub"><use xlink:href="@Url.Content("~/Content/svg/icon.svg")?svg=20170907#title-sub"/></svg>
                        <em class="slogan b-bold b-text-center">多一個眼神 多一份關懷<br>支持巴克動物協會救援行動，<br class="b-show-i5">給浪浪活下去的希望！</em>
                        <svg class="svg-icon diamond b-hide-i5"><use xlink:href="@Url.Content("~/Content/svg/icon.svg")?svg=20170907#diamond"/></svg>
                        <svg class="svg-icon diamond-i5 b-show-i5"><use xlink:href="@Url.Content("~/Content/svg/icon.svg")?svg=20170907#diamond-i5"/></svg>
                        <svg class="svg-icon arrow-down"><use xlink:href="@Url.Content("~/Content/svg/icon.svg")?svg=20170907#arrow-down"/></svg>
                    </h2>
                </header>
                <div class="index-bd">
                    <div class="selection-wrap">
                        <div class="selection-content jQ-selection">
                            <figure class="img-wrap b-hide-xs">
                                <img src="@Url.Content("~/Content/img/index/cat.jpg")?img=20170907" alt="看浪貓的故事">
                            </figure>
                            <figure class="img-wrap b-hide-dt">
                                <img src="@Url.Content("~/Content/img/index/cat-m.jpg")?img=20170907" alt="看浪貓的故事">
                            </figure>
                            <a href="story?pet=cat" class="m-button b-middle" ga_cat="index" ga_event="click" ga_label="cat">
                                <em class="text b-bold">看浪貓的故事</em>
                                <i class="btn-icon"></i>
                            </a>
                        </div>
                        <div class="selection-content jQ-selection">
                            <figure class="img-wrap b-hide-xs">
                                <img src="@Url.Content("~/Content/img/index/dog.jpg")?img=20170907" alt="看浪犬的故事">
                            </figure>
                            <figure class="img-wrap b-hide-dt">
                                <img src="@Url.Content("~/Content/img/index/dog-m.jpg")?img=20170907" alt="看浪犬的故事">
                            </figure>
                            <a href="story?pet=dog" class="m-button b-middle" ga_cat="index" ga_event="click" ga_label="dog">
                                <em class="text b-bold">看浪犬的故事</em>
                                <i class="btn-icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
@section scripts{
    <script defer src="@Url.Content("~/Scripts/js/index.min.js")?js=20170907"></script>
}