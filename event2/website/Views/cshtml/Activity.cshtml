                    <div class="activities-icon-bg">
                        <div class="activities-icon-frame">
                            <svg class="svg-icon cloud is-light is-one"><use xlink:href="@Url.Content("~/Content/svg/icon.svg")?svg=20170907#cloud"/></svg>
